<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage" >

    <Button
        android:id="@+id/bt_on_off"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_change"
        android:layout_alignRight="@+id/bt_change"
        android:layout_alignEnd="@+id/bt_change"
        android:layout_marginTop="95dp"
        android:id="@+id/bt_list" />

    <Button
        android:id="@+id/bt_change"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/bt_on_off"
        android:layout_alignLeft="@+id/bt_on_off"
        android:layout_alignStart="@+id/bt_on_off" />


</RelativeLayout>